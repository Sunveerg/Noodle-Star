html
  head
    title= "Top Clothing Order Confirmed!"
    link(rel='stylesheet' href='../style.css')
  body
  div.order-container
   div.order-wrap
    div.order-headings
     h1.heading Thank you for ordering!
     h2.heading Here are your order details
    table 
     tbody 
      tr
       th Subtotal:
        td $#{clothingTotal} 
      tr
       th Delivery Fee:
        td $#{feeTotal}
      tr
       th Order Total:
        td $#{orderTotal}
    div.tracking-wrap
      h3.heading Your Tracking Link:
      a(href=trackingUrl target="_blank") Click here to track your order  
    div.btn-wrap
      a(href="/")#btn-link
       button#btn Return Home